<% include partials/header %>
	<style>
		nav {
			position: fixed;
			top: 0;
			transition: opacity 0.2s;
			}
			nav.fadedOut {
				opacity: 0;
				transition: opacity 0.2s;
				}
			nav:hover {
				opacity: 1;
				transition: opacity 0.2s;
				background-color: rgba(250, 250, 250, 0.8)
				}
		main {
			margin-top: 74px;
			}
			#article {
				width: 640px;
				margin: 0 auto;
				display: block;
				border-style: none;
				font: 18px/34px Georgia, serif;
				}
				#article h1#title {
					font-size: 32px;
					line-height: 150%;
					}
				#article #details {
					margin: 8px 0 16px 0;
					font-size: 16px;
					line-height: normal;
					color: rgb(180, 180, 180);
					}
				#article a:link {
					color: rgb(6, 133, 135);
					text-decoration: none;
					}
				#article a:visited {
					color: rgb(6, 133, 135);
					text-decoration: none;
					}
				#article a:hover {
					color: rgb(6, 133, 135);
					text-decoration: underline;
					}
				#article a.noUnderline, a.onlyHover {
					text-decoration: none;
					}
					a.onlyHover:hover {
						text-decoration: underline;
						}

				#article h2 {
					margin: 32px 0 16px 0;
					border-bottom: 2px solid rgb(238, 238, 238);
					}
				#article img {
					max-width: 604px;
					height: auto;
					margin: 32px auto;
					padding: 16px;
					display: block;
					background-color: white;
					box-shadow:0 1px 2px #aaa;
					}
				#article p + p {
					margin-top: 16px;
					}
	</style>
	<main class="globalWidth">
		<div id="article"><h1 id='title'><%= article.meta.title %></h1><div id="details"><a class="source" href="<%= article.url %>"><%= article.meta.domain %></a><% if (typeof(article.meta.author) != 'undefined') { %>&ensp;&middot;&ensp;<span class="author">by <%= article.meta.author %></span><% } %></div><%- article.content.html %></div>
	</main>
	<script>
		$(window).resize(function () {
			positionHeader();
		});

		function positionHeader() {
			var headerWidth = $('nav').width();
			var windowWidth = $(window).width();
			$('nav').css('left', (windowWidth - headerWidth) / 2)
		}

		positionHeader();

		var oldPos = 0;
		var navHidden = false;
		$(window).scroll(function () {
			if ($(this).scrollTop() <= 0) {
				if (navHidden === true) {
					$('nav').removeClass('fadedOut');
					navHidden = false;
				}
			} else if (navHidden === false) {
				$('nav').addClass('fadedOut');
				navHidden = true;
			}
		});
	</script>
<% include partials/footer %>
